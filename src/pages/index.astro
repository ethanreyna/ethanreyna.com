---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Ethan Reyna">
		<main>
			<header>
				<Navbar/>
			</header>
			<h1>welcome to my website. i'm ethan</h1>
			<span class="subheader">
				(under construction btw)
			</span>
			<div class="section">
				<span class="description">
					This is my personal website. Here you can find my work experience,
					some important links, my resume, and some more info about me. Feel
					free to reach out to me using that little email button up top.
				</span>
			</div>
		</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 2.5rem;
		font-weight: 500;
		line-height: 1;
		margin-top: 1em;
	}
	.subheader {
		font-size: 1.25rem;
		font-weight: 100;
		line-height: 1;
	}
	.description {
		font-size: 1.25rem;
		font-weight: 400;
		line-height: 1;
		margin-bottom: 1em;
		margin-top: 1em;
	}
	.section {
		margin-bottom: 1em;
		margin-top: 1em;
	}
</style>
